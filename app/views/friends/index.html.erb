<% if user_signed_in? %>
  <table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td scope="row" class="align-middle"><%= link_to friend.first_name + " " + friend.last_name, friend %></td>
            <td scope="row" class="align-middle"><%= friend.email %></td>
            <td scope="row" class="align-middle"><%= friend.phone %></td>
            <td scope="row" class="align-middle"><%= friend.twitter %></td>
            <td scope="row"><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class: "btn btn-secondary btn-sm" %>
<% else %>
  <h1 class="mt-3">Hello World!!</h1>
  <p>This is my first Rails webpage...</p>
<% end %>